<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe_layout"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="40dp"
            android:background="@mipmap/delete" />


    </LinearLayout>

    <android.support.v7.widget.CardView
        tools:targetApi="lollipop"
        android:id="@+id/cv"
        android:stateListAnimator="@drawable/lift_on_touch"
        android:layout_height="105dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        android:clickable="true"
        android:layout_width="105dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                tools:targetApi="lollipop"
                android:id="@+id/cv1"
                android:stateListAnimator="@drawable/lift_on_touch"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:layout_height="30dp"
                app:cardCornerRadius="6dp"
                android:clickable="true"
                android:layout_width="25dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/like"
                    android:id="@+id/like_" />

                <TextView
                    android:text="103"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/like"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textSize="10sp"
                    android:textColor="#FF0000" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv2"
                android:layout_width="105dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:clickable="true"
                android:stateListAnimator="@drawable/lift_on_touch"
                app:cardBackgroundColor="@color/dirtywhite"
                app:cardCornerRadius="2dp"
                app:cardElevation="10dp"
                tools:targetApi="lollipop">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_content"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="31dp"
                        android:layout_toEndOf="@+id/title"
                        android:singleLine="true"
                        android:text="OOSE"
                        android:textColor="@color/bottomColor5"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="30dp"
                        android:text="標題:"
                        android:textColor="@color/bottomColor5"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/person_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="13dp"
                        android:layout_toEndOf="@+id/selfpicture"
                        android:text="liang.yu.chen"
                        android:textColor="@color/write"
                        android:textSize="10sp" />

                    <ImageView
                        android:id="@+id/selfpicture"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="8dp" />

                    <ImageView
                        android:id="@+id/look_"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="false"
                        android:layout_marginEnd="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_toStartOf="@+id/look"
                        app:srcCompat="@drawable/look" />

                    <TextView
                        android:id="@+id/look"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="3dp"
                        android:layout_toStartOf="@+id/message_"
                        android:text="201"
                        android:textColor="@color/write"
                        android:textSize="8sp" />

                    <ImageView
                        android:id="@+id/message_"
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_alignTop="@+id/look"
                        android:layout_marginEnd="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_toStartOf="@+id/message"
                        app:srcCompat="@drawable/message" />

                    <TextView
                        android:id="@+id/message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/look"
                        android:layout_marginEnd="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_toStartOf="@+id/download_"
                        android:text="2"
                        android:textColor="@color/write"
                        android:textSize="8sp" />

                    <ImageView
                        android:id="@+id/download_"
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_alignTop="@+id/message"
                        android:layout_marginEnd="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_toStartOf="@+id/link"
                        app:srcCompat="@drawable/download" />

                    <TextView
                        android:id="@+id/link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/message"
                        android:layout_marginEnd="1dp"
                        android:layout_marginRight="1dp"
                        android:text="99"
                        android:textColor="@color/write"
                        android:textSize="8sp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/note_picture"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </com.daimajia.swipe.SwipeLayout>
</LinearLayout>