<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe_layout"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/bottom_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/edit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/cover" />

            <ImageButton
                android:id="@+id/share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"
                android:background="@mipmap/share" />

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:background="@mipmap/delete" />


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:clickable="true"
            android:stateListAnimator="@drawable/lift_on_touch"
            app:cardCornerRadius="6dp"
            tools:targetApi="lollipop">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:id="@+id/cv2"
                    android:layout_width="105dp"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:clickable="true"
                    android:stateListAnimator="@drawable/lift_on_touch"
                    app:cardBackgroundColor="@color/dirtywhite"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="10dp"
                    tools:targetApi="lollipop">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="26dp"
                            android:layout_toEndOf="@+id/title1"
                            android:text="OOSE"
                            android:textColor="@color/bottomColor5"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="25dp"
                            android:text="標題:"
                            android:textColor="@color/bottomColor5"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/person_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_toEndOf="@+id/selfphoto"
                            android:text="liang.yu.chen"
                            android:textColor="@color/write"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/selfphoto"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="5dp" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />

                <com.example.ffes.flex_framwork.noteview.widget.Triangle
                    android:id="@+id/triangle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </com.daimajia.swipe.SwipeLayout>
</LinearLayout>