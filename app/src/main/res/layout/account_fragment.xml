<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_google_account_fragment2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="24dp" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            app:srcCompat="@drawable/bg_small" />


        <com.pkmmte.view.CircularImageView
            android:id="@+id/user"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginLeft="133dp"
            android:layout_marginStart="133dp"
            android:layout_marginTop="13dp"
            android:scaleType="fitCenter"
            app:border="true"
            app:border_color="#EEEEEE"
            app:border_width="3dp"
            app:shadow="false" />


        <ImageButton
            android:id="@+id/out"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="48dp"
            android:background="@mipmap/out" />

        <ImageButton
            android:id="@+id/edit"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@+id/out"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="60dp"
            android:layout_toEndOf="@+id/user"
            android:background="@drawable/pencil" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="115dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:textColor="@color/bottomColor5"
                android:textSize="16sp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment1"
            android:layout_width="match_parent"
            android:layout_height="613dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/background">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/sharedlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

    </RelativeLayout>
</LinearLayout>
